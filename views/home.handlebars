  <!--movies arranged/categorized in rows based on genres-->
  <section class ="genre-lists" v-for="genre in genres">
    <div v-if="genre.movies.length > 0">

      <div class = "genre-item">
        <h6 class = "genre-name"><i class="fas fa-film"></i>  ${ genre.name }</h6>
        <h6 class = "movie-title">${ movies_title }</h6>
        <div class = "movie-list" v-for="movie in genre.movies">



          <!--movies are categorized into their specific genres from db-->
          <a :href="'/movies/' + movie.movies_id + movie.movies_title + '/' + movie.movies_trailer">
          <img class = "movie-thumb" :src="'/images/' + movie.movies_cover" :alt="movie.movies_title">
          <p class="moive_thumb" :alt="movie.movies_title"></p>
          </a>
        </div>
      </div>

    </div>

  </section>







